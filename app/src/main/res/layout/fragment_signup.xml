<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible"
    tools:context=".Fragments.signup.SignupFragment">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:padding="12dp"
        android:src="@drawable/contact_us_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/signupWithEmail_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/linear_layout_shape"
        android:drawableStart="@drawable/icons8_gmail_24"
        android:elevation="20dp"
        android:gravity="center|center"
        android:padding="8dp"
        android:paddingStart="28dp"
        android:text="SignUp with Email"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/dontHaveAcoount_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have gmail account? "
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/createGmailAccount_textView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/signupWithEmail_textView"
        app:layout_constraintTop_toBottomOf="@+id/signupWithEmail_textView" />

    <TextView
        android:id="@+id/createGmailAccount_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Create one "
        android:textSize="14sp"
        android:textColor="@color/lightBlue"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dontHaveAcoount_textView"
        app:layout_constraintEnd_toEndOf="@+id/signupWithEmail_textView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dontHaveAcoount_textView"
        app:layout_constraintTop_toTopOf="@+id/dontHaveAcoount_textView" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="20dp"
        android:text="@string/login"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:background="@drawable/linear_layout_shape"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/trademark_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/trademark_imageView"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/matlatlelogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>