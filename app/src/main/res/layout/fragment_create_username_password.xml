<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.signup.CreateUsernamePasswordFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/toolbarBackgroundColor"
        android:elevation="5dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:indeterminate="false"
        android:visibility="gone"
        app:tint = "@color/primary2"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

    <View
        android:id="@+id/first_view"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_shape"
        android:backgroundTint="@color/green"
        app:layout_constraintEnd_toStartOf="@+id/second_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <View
        android:id="@+id/second_view"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_shape"
        android:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="@+id/first_view"
        app:layout_constraintEnd_toStartOf="@+id/third_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/first_view"
        app:layout_constraintTop_toTopOf="@+id/first_view" />

    <View
        android:id="@+id/third_view"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:background="@drawable/btn_shape"
        android:backgroundTint="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/second_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/second_view"
        app:layout_constraintTop_toTopOf="@+id/second_view" />

    <TextView
        android:id="@+id/createUserName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Create username and password."
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/charTooLong_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_check"
        app:layout_constraintStart_toStartOf="@+id/confirmPassword_editText"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassword_editText" />

    <ImageView
        android:id="@+id/capitalLetter_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        app:layout_constraintStart_toStartOf="@+id/charTooLong_imageView"
        app:layout_constraintTop_toBottomOf="@+id/charTooLong_imageView" />

    <ImageView
        android:id="@+id/charAndNumber_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        app:layout_constraintStart_toStartOf="@+id/capitalLetter_imageView"
        app:layout_constraintTop_toBottomOf="@+id/capitalLetter_imageView" />

    <TextView
        android:id="@+id/charTooLong_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="8 characters long, without spaces."
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/charTooLong_imageView"
        app:layout_constraintStart_toEndOf="@+id/charTooLong_imageView"
        app:layout_constraintTop_toTopOf="@+id/charTooLong_imageView" />

    <TextView
        android:id="@+id/capitalLetter_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1 Capital letter (atleast)."
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/capitalLetter_imageView"
        app:layout_constraintEnd_toEndOf="@+id/charTooLong_textView"
        app:layout_constraintStart_toEndOf="@+id/capitalLetter_imageView"
        app:layout_constraintTop_toTopOf="@+id/capitalLetter_imageView" />

    <TextView
        android:id="@+id/charAndNumber_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1 Special character and 1 number."
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/charAndNumber_imageView"
        app:layout_constraintEnd_toEndOf="@+id/capitalLetter_textView"
        app:layout_constraintStart_toEndOf="@+id/charAndNumber_imageView"
        app:layout_constraintTop_toTopOf="@+id/charAndNumber_imageView" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="I agree with the Terms and Conditions"
        app:layout_constraintEnd_toEndOf="@+id/confirmPassword_editText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/confirmPassword_editText"
        app:layout_constraintTop_toBottomOf="@+id/charAndNumber_imageView" />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_shape"
        android:backgroundTint="@color/primary2"
        android:elevation="16dp"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        android:text="CONTINUE"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/im"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Almost There!"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/third_view"
        app:layout_constraintStart_toStartOf="@+id/first_view"
        app:layout_constraintTop_toBottomOf="@+id/second_view" />

    <EditText
        android:id="@+id/email_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edit_text_shape"
        android:ems="10"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:paddingStart="24dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createUserName_textView" />

    <EditText
        android:id="@+id/password_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text_shape"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:paddingStart="24dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/email_editText"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/email_editText"
        app:layout_constraintTop_toBottomOf="@+id/email_editText" />

    <EditText
        android:id="@+id/confirmPassword_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text_shape"
        android:ems="10"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:paddingStart="24dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/password_editText"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/password_editText"
        app:layout_constraintTop_toBottomOf="@+id/password_editText" />


</androidx.constraintlayout.widget.ConstraintLayout>