<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.signup.CreateUsernamePasswordFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/toolbarBackgroundColor"
        android:elevation="5dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/first_view"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_shape"
        app:layout_constraintEnd_toStartOf="@+id/second_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <View
        android:id="@+id/second_view"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_shape"
        app:layout_constraintBottom_toBottomOf="@+id/first_view"
        app:layout_constraintEnd_toStartOf="@+id/third_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/first_view"
        app:layout_constraintTop_toTopOf="@+id/first_view" />

    <View
        android:id="@+id/third_view"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:background="@drawable/btn_shape"
        android:backgroundTint="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/second_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/second_view"
        app:layout_constraintTop_toTopOf="@+id/second_view" />

    <TextView
        android:id="@+id/createUserName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Create username and password."
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/charTooLong_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_check"
        app:layout_constraintStart_toStartOf="@+id/confirmPassword_textInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassword_textInputLayout" />

    <ImageView
        android:id="@+id/capitalLetter_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        app:layout_constraintStart_toStartOf="@+id/charTooLong_imageView"
        app:layout_constraintTop_toBottomOf="@+id/charTooLong_imageView" />

    <ImageView
        android:id="@+id/charAndNumber_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        app:layout_constraintStart_toStartOf="@+id/capitalLetter_imageView"
        app:layout_constraintTop_toBottomOf="@+id/capitalLetter_imageView" />

    <TextView
        android:id="@+id/charTooLong_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="8 characters long, without spaces."
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/charTooLong_imageView"
        app:layout_constraintStart_toEndOf="@+id/charTooLong_imageView"
        app:layout_constraintTop_toTopOf="@+id/charTooLong_imageView" />

    <TextView
        android:id="@+id/capitalLetter_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1 Capital letter (atleast)."
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/capitalLetter_imageView"
        app:layout_constraintEnd_toEndOf="@+id/charTooLong_textView"
        app:layout_constraintStart_toEndOf="@+id/capitalLetter_imageView"
        app:layout_constraintTop_toTopOf="@+id/capitalLetter_imageView" />

    <TextView
        android:id="@+id/charAndNumber_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1 Special character and 1 number."
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/charAndNumber_imageView"
        app:layout_constraintEnd_toEndOf="@+id/capitalLetter_textView"
        app:layout_constraintStart_toEndOf="@+id/charAndNumber_imageView"
        app:layout_constraintTop_toTopOf="@+id/charAndNumber_imageView" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="I agree with the Terms and Conditions"
        app:layout_constraintEnd_toEndOf="@+id/confirmPassword_textInputLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/confirmPassword_textInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/charAndNumber_imageView" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/im"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Almost There!"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/third_view"
        app:layout_constraintStart_toStartOf="@+id/first_view"
        app:layout_constraintTop_toBottomOf="@+id/second_view" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createUserName_textView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username_textInputEditText"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="username" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/username_textInputLayout"
        app:layout_constraintStart_toStartOf="@+id/username_textInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/username_textInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_textInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/confirmPassword_textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/password_textInputLayout"
        app:layout_constraintStart_toStartOf="@+id/password_textInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/password_textInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/confirmPassword_textInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_password"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>




</androidx.constraintlayout.widget.ConstraintLayout>