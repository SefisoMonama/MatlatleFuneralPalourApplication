<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_top_corners_shape"
    android:padding="20dp"
    tools:context=".Fragments.home.MoreFragment">

    <ImageView
        android:id="@+id/logo_imageView"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/matlatlelogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Matlatle Funeral Palour cc"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/logo_imageView"
        app:layout_constraintTop_toTopOf="@+id/logo_imageView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="matlatle@gmail.com"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/login_signUp_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_logout"
        app:layout_constraintStart_toStartOf="@+id/logo_imageView"
        app:layout_constraintTop_toBottomOf="@+id/logo_imageView" />

    <TextView
        android:id="@+id/login_signUp_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Login/SignUp"
        app:layout_constraintBottom_toBottomOf="@+id/login_signUp_imageView"
        app:layout_constraintStart_toEndOf="@+id/login_signUp_imageView"
        app:layout_constraintTop_toTopOf="@+id/login_signUp_imageView" />

    <TextView
        android:id="@+id/signOut_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Exit App"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/signOut_imageView"
        app:layout_constraintStart_toEndOf="@+id/signOut_imageView"
        app:layout_constraintTop_toTopOf="@+id/signOut_imageView" />

    <ImageView
        android:id="@+id/signOut_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_login"
        app:layout_constraintEnd_toEndOf="@+id/login_signUp_imageView"
        app:layout_constraintStart_toStartOf="@+id/login_signUp_imageView"
        app:layout_constraintTop_toBottomOf="@+id/login_signUp_imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/red" />
</androidx.constraintlayout.widget.ConstraintLayout>