<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MatlatleFuneralPalourApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="cardCustomStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">5dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_width">110dp</item>
    </style>

    <style name="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/matlatlelogo</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="actionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:color">@color/primary</item>
    </style>

    <style name="homeCustomStatusBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="statusBarBackground">@color/primary</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_top_corners_shape</item>
    </style>


</resources>